    label:        "Enable HTMLCache?" | t,
    id:           'enableGeneral',
    name:         'enableGeneral',
    instructions: "If the HTMLCache is not enabled, it will not serve cached files" | t,
    errors:       settings.getErrors('enableGeneral'),
    on:           settings.enableGeneral
}) }}

